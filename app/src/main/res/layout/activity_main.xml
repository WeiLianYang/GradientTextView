<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <com.william.gradient.GradientTextView
        android:id="@+id/gradientTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="@string/leftToRight_GradientTextView"
        android:textSize="24sp"
        app:gradient_animate="true"
        app:gradient_direction="leftToRight"
        app:gradient_speed="slow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.william.gradient.GradientTextView
        android:id="@+id/gradientTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/leftToRight_GradientTextView"
        android:textSize="24sp"
        app:gradient_animate="true"
        app:gradient_direction="leftToRight"
        app:gradient_speed="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gradientTextView1" />

    <com.william.gradient.GradientTextView
        android:id="@+id/gradientTextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/leftToRight_GradientTextView"
        android:textSize="24sp"
        app:gradient_animate="true"
        app:gradient_direction="leftToRight"
        app:gradient_speed="fast"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gradientTextView2" />

    <com.william.gradient.GradientTextView
        android:id="@+id/gradientTextView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/leftToRight_GradientTextView"
        android:textSize="24sp"
        app:gradient_animate="false"
        app:gradient_direction="leftToRight"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gradientTextView3" />

    <com.william.gradient.GradientTextView
        android:id="@+id/gradientTextView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/topToBottom_GradientTextView"
        android:textSize="24sp"
        app:gradient_animate="true"
        app:gradient_direction="topToBottom"
        app:gradient_speed="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gradientTextView4" />

    <com.william.gradient.GradientTextView
        android:id="@+id/gradientTextView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/topToBottom_GradientTextView"
        android:textSize="24sp"
        app:gradient_animate="false"
        app:gradient_direction="topToBottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gradientTextView5" />

</androidx.constraintlayout.widget.ConstraintLayout>